<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/ExotikosActionBar</item>
        <item name="android:actionBarStyle">@style/ExotikosActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/secondary_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_light</item>
        <item name="android:textAppearanceLarge">@style/ExotikosLargeText</item>
        <item name="android:textAppearanceMedium">@style/ExotikosMediumText</item>
    </style>

    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/ExotikosActionBar</item>
        <item name="android:actionBarStyle">@style/ExotikosActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/secondary_light</item>
        <item name="android:textAppearanceLarge">@style/ExotikosLargeText</item>
        <item name="android:textAppearanceMedium">@style/ExotikosMediumText</item>
    </style>

    <style name="ExotikosActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary_dark</item>
        <item name="background">@color/primary_dark</item>
        <item name="android:textAppearanceLarge">@style/ExotikosLargeText</item>
        <item name="android:textAppearanceMedium">@style/ExotikosMediumText</item>
    </style>

    <style name="ExotikosCardHeaderBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/divider</item>
        <item name="background">@color/divider</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

    <style name="ExotikosToolbar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="background">@color/secondary_light</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="android:textAppearanceLarge">@style/ExotikosLargeText</item>
        <item name="android:textAppearanceMedium">@style/ExotikosMediumText</item>
    </style>
    
    <style name="ExotikosLargeText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="ExotikosMediumText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="ExotikosSmallText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="BigButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/big_button_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="colorAccent">@color/primary_text</item>
    </style>

    <color name="primary">#00BCD4 </color>
    <color name="primary_dark">#0097A7 </color>
    <color name="primary_light">#B2EBF2 </color>
    <color name="secondary_light">#fff5f8fa</color>
    <color name="accent">#009688 </color>
    <color name="primary_text">#212121 </color>
    <color name="secondary_text">#757575 </color>
    <color name="icons">#FFFFFF </color>
    <color name="divider">#BDBDBD </color>

    <color name="twitter_blue">#55acee</color>
    <color name="twitter_lighter_grey">#fff5f8fa</color>
    <color name="twitter_light_grey">#ffe1e8ed</color>
    <color name="twitter_mild_grey">#ffccd6dd</color>
    <color name="twitter_grey">#ff8899a6</color>
    <color name="twitter_dark_grey">#ff66757f</color>
    <color name="twitter_darker_grey">#ff292f33</color>
    <color name="tweet_transparent_bg">#80000000</color>
    <color name="twitter_active_retweet">#ff5fba7d</color>
    <color name="twitter_active_fav">#ffe81c4f</color>
    <color name="flight_item_background_guard">#b0ffffff</color>
    <color name="flight_item_font">#ff000000</color>
</resources>
