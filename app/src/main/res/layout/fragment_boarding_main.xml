<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            tools:text="A54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ExotikosLargeText"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:layout_marginLeft="@dimen/fragment_travel_prep_padding"
            android:layout_marginRight="@dimen/fragment_horizontal_margin"
            android:id="@+id/tvBoardingGate" />

        <TextView
            tools:text="Terminal 3"
            android:layout_width="wrap_content"
            android:textAppearance="@style/ExotikosMediumText"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBoardingGate"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:layout_marginLeft="@dimen/fragment_travel_prep_padding"
            android:layout_marginRight="@dimen/fragment_horizontal_margin"
            android:layout_marginBottom="@dimen/fragment_travel_prep_padding"
            android:id="@+id/tvTerminal" />

    </RelativeLayout>
</layout>