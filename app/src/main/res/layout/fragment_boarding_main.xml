<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBoardingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:gravity="fill"
            android:text="@string/boardingInfo"/>


        <TextView
            tools:text="A54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ExotikosLargeText"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:gravity="center_horizontal"
            android:layout_below="@id/tvBoardingInfo"
            android:id="@+id/tvBoardingGate" />

        <TextView
            android:text="Terminal 3"
            android:layout_width="match_parent"
            android:textAppearance="@style/ExotikosMediumText"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBoardingGate"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:gravity="center_horizontal"
            android:id="@+id/tvTerminal" />

        <TextView
            tools:text="Seat #"
            android:layout_width="match_parent"
            android:textAppearance="@style/ExotikosMediumText"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTerminal"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/fragment_travel_prep_padding"
            android:id="@+id/tvSeat" />

        <View
            android:id="@+id/spacer"
            android:layout_below="@+id/tvSeat"
            style="@style/cardViewSeparator"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_below="@id/spacer"
            android:text="Read More"
            style="@style/cardViewButton"/>
    </RelativeLayout>
</layout>