<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rvCardContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvCheckinInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="fill"
            tools:text="fdgfd gfhgh g g hgjyrhj dgf ff h ghj fhj hkj gh fh gfhdgjhjfhg hgf hgd jhfgj fgjhjdghgdjfgh hjg dgjfjfhjgj h"/>

        <View
            android:id="@+id/spacer"
            android:layout_below="@+id/tvCheckinInfo"
            style="@style/cardViewSeparator"/>

        <Button
            android:id="@+id/btnCheckInScan"
            android:layout_below="@+id/spacer"
            android:text="@string/check_in_scan"
            style="@style/cardViewButton"/>

        <View
            android:id="@+id/spacer2"
            android:layout_below="@+id/btnCheckInScan"
            style="@style/cardViewSeparator"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_below="@id/spacer2"
            android:text="Read More"
            style="@style/cardViewButton"/>
    </RelativeLayout>
</layout>
