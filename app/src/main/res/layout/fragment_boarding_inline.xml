<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
    android:text="@string/boardingLine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="@style/ExotikosLargeText"
    android:layout_marginTop="@dimen/fragment_travel_prep_padding"
        android:layout_margin="@dimen/fragment_horizontal_margin"
    android:id="@+id/tvBoardingLine" />

    <TextView
        android:text="@string/boardingLineExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBoardingLineExplanation"
        android:layout_margin="@dimen/fragment_horizontal_margin"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/boarding"
        android:layout_margin="@dimen/fragment_horizontal_margin"
        android:id="@+id/boardingHelp" />
</LinearLayout>