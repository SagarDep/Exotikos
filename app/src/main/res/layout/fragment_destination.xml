<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/dateLanding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fragment_travel_prep_padding"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:id="@+id/tvLandingDateLbl" />

        <TextView
            tools:text="15, Nov 2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvLandingDateLbl"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/fragment_travel_prep_padding"
            android:layout_marginEnd="@dimen/fragment_travel_prep_padding"
            android:id="@+id/tvLandingDate" />

        <TextView
            android:text="@string/landing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLandingDateLbl"
            android:layout_marginLeft="@dimen/fragment_travel_prep_padding"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:id="@+id/tvLandingLbl" />

        <TextView
            android:text="9:30 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvLandingLbl"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/fragment_travel_prep_padding"
            android:layout_marginEnd="@dimen/fragment_travel_prep_padding"
            android:id="@+id/tvArrivalTime" />

        <TextView
            android:text="@string/carouselLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLandingLbl"
            android:layout_alignLeft="@+id/tvLandingLbl"
            android:layout_alignStart="@+id/tvLandingLbl"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:id="@+id/tvCarouselLbl" />

        <TextView
            tools:text="2B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvCarouselLbl"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/fragment_travel_prep_padding"
            android:layout_marginEnd="@dimen/fragment_travel_prep_padding"
            android:id="@+id/tvCarousel" />

        <TextView
            android:text="Arrival Gate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCarouselLbl"
            android:layout_alignLeft="@+id/tvLandingLbl"
            android:layout_alignStart="@+id/tvLandingLbl"
            android:layout_marginTop="@dimen/fragment_travel_margin_top"
            android:id="@+id/tvArrivalGatelbl"
            android:layout_marginBottom="@dimen/fragment_travel_prep_padding"/>

        <TextView
            tools:text="7B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvArrivalGatelbl"
            android:layout_alignLeft="@+id/tvCarousel"
            android:layout_alignStart="@+id/tvCarousel"
            android:id="@+id/tvArrivalGate"
            android:layout_marginBottom="@dimen/fragment_travel_prep_padding"/>

    </RelativeLayout>
</layout>
