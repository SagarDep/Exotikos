<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="Pre Flight Information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:background="@color/colorAccent"
            android:id="@+id/tvPreFlightHeader" />


        <EditText
            tools:text="Enter Flight Number here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:hint="Enter Flight Number here"
            android:id="@+id/etFlightNumber"
            android:layout_below="@+id/tvPreFlightHeader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            tools:text="San Francisco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:id="@+id/tvPreflightDeparture"
            android:layout_below="@+id/etFlightNumber"
            android:layout_alignLeft="@+id/etFlightNumber"
            android:layout_alignStart="@+id/etFlightNumber" />

        <Button
            android:text="Get Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etFlightNumber"
            android:layout_toRightOf="@+id/etFlightNumber"
            android:layout_toEndOf="@+id/etFlightNumber"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:id="@+id/btnDetails" />


        <TextView
            android:text="Boardng in 32Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBoarding"
            android:background="@android:color/holo_green_dark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"/>

        <Button
            android:text="Where is the Airport?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAirportPage"
            android:layout_above="@+id/tvCheckinDaysLeft"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp" />

        <TextView
            tools:text="6:30 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPreflightDepTime"
            android:layout_marginRight="33dp"
            android:layout_marginEnd="33dp"
            android:layout_alignBottom="@+id/tvPreflightDeparture"
            android:layout_toLeftOf="@+id/btnDetails"
            android:layout_toStartOf="@+id/btnDetails"
            android:layout_alignTop="@+id/tvPreflightDeparture" />

        <TextView
            tools:text="Delayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignBaseline="@+id/tvPreflightDepTime"
            android:layout_alignBottom="@+id/tvPreflightDepTime"
            android:layout_alignLeft="@+id/btnDetails"
            android:layout_alignStart="@+id/btnDetails" />

        <TextView
            tools:text="Checkin before 31Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:id="@+id/tvCheckinDaysLeft"
            android:layout_above="@+id/btnLaunchScanPage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp" />

        <Button
            android:text="Checkin Completed: Scan Boarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLaunchScanPage"
            android:layout_above="@+id/tvBoarding"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp" />


    </RelativeLayout>
</layout>