<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:text="Pre Flight Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:background="@color/colorAccent"
        android:id="@+id/tvPreFlightHeader" />


    <EditText
        tools:text="Enter Flight Number here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:hint="Enter Flight Number here"
        android:id="@+id/etFlightNumber"
        android:layout_below="@+id/tvPreFlightHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="San Francisco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/tvPreflightDeparture"
        android:layout_below="@+id/etFlightNumber"
        android:layout_alignLeft="@+id/etFlightNumber"
        android:layout_alignStart="@+id/etFlightNumber" />

    <Button
        android:text="Where is the Airport?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/button2"
        android:layout_below="@+id/tvPreflightDeparture"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Delayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/etFlightNumber"
        android:layout_toEndOf="@+id/etFlightNumber"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <TextView
        android:text="6:30 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPreflightDepTime"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/etFlightNumber"
        android:layout_alignEnd="@+id/etFlightNumber"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />



</RelativeLayout>