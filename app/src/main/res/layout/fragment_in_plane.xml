<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rvCardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:context="com.exotikosteam.exotikos.fragments.InPlaneFragment">

        <TextView
            android:id="@+id/tvInPlane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="fill"
            tools:text="bla bla bla" />

        <View
            android:id="@+id/spacer"
            android:layout_below="@+id/tvInPlane"
            style="@style/cardViewSeparator"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_below="@+id/spacer"
            android:text="Read More"
            style="@style/cardViewButton"/>

    </RelativeLayout>
</layout>
