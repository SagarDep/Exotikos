<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.exotikosteam.exotikos.fragments.InPlaneFragment"
        >

        <TextView
            android:id="@+id/tvInPlane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"

            tools:text="bla bla bla"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary_light"
            android:layout_below="@+id/tvInPlane"
            android:layout_marginTop="@dimen/fragment_travel_prep_margin_bottom"
            android:layout_marginBottom="@dimen/fragment_travel_prep_margin_bottom"
            android:id="@+id/spacer"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/spacer"
            android:background="@drawable/arrow_right_bold_circle" />

    </RelativeLayout>
</layout>
